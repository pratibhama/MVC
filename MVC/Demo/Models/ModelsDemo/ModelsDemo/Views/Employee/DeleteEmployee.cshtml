@using ModelsDemo.Models
@model Employee
@{
    ViewBag.Title = "DeleteEmployee";
}

<h2>Delete Employee</h2>

<h2>Showing Details of requested employee</h2>

@if (Model != null)
{
    <div>
        <div>Employee Id : @Model.EmployeeId</div>
        <div>Name : @Model.Name</div>
        <div>City : @Model.City</div>
    </div>
}
else
{
    <div>Employee not found</div>
}

@using(Html.BeginForm())
{
    <label>Are you sure that you want to delete this employee?</label>
    <div>
        <input type="submit" value="Delete" />
    </div>
}
<div>
    @Html.ActionLink("Back to Employee Index", "Index")
</div>